@model TechnoMobileProject.Models.items

@{
    ViewData["Title"] = "Create";
}<style>
     body {
         background-color: #f5f5f5;
         margin: 0;
         font-family: Arial, sans-serif;
         color:darkslategrey;
     }

     .form-container {
         background-color: white;
         padding: 15px;
         border-radius: 10px;
         box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
         width: 100%;
         max-width: 500px;
         margin: 20px auto;
         min-height: 500px;
     }

     h1, h4 {
         text-align: center;
         margin-bottom: 10px;
     }
</style>

<div class="form-container mt-5">
    <h1 class="mb-3">Create</h1>
    <h4 class="text-muted">Item Details</h4>
    <hr />
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <div class="form-group mb-2">
            <label class="control-label fw-bold">Phone Name</label>
            <input asp-for="title" class="form-control" placeholder="Enter phone name" />
            <span asp-validation-for="title" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label class="control-label fw-bold">Specifications</label>
            <textarea asp-for="info" class="form-control" rows="2" placeholder="Enter specs"></textarea>
            <span asp-validation-for="info" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="price" class="control-label fw-bold">Price</label>
            <input asp-for="price" class="form-control" placeholder="Enter price" />
            <span asp-validation-for="price" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="discount" class="control-label fw-bold">Discount</label>
            <select asp-for="discount" class="form-control">
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>
            <span asp-validation-for="discount" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label class="control-label fw-bold">Production Year</label>
            <input asp-for="pubdate" class="form-control" asp-format="{0:dd/MM/yyyy}" placeholder="Enter year" />
            <span asp-validation-for="pubdate" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label class="control-label fw-bold">Category</label>
            <select class="form-control" asp-for="category">
                <option value="0">Please select</option>
                <option value="1">iPhone</option>
                <option value="2">Samsung</option>
                <option value="3">Google</option>
                <option value="4">OnePlus</option>
                <option value="5">Xiaomi</option>
                <option value="6">Huawei</option>
                <option value="7">Oppo</option>
                <option value="8">Vivo</option>
                <option value="9">Sony</option>
                <option value="10">LG</option>
                <option value="11">Nokia</option>
                <option value="12">Realme</option>
                <option value="13">Asus</option>
                <option value="14">Lenovo</option>
                <option value="15">Honor</option>
                <option value="16">BlackBerry</option>
            </select>
            <span asp-validation-for="category" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="bookquantity" class="control-label fw-bold">Quantity</label>
            <input asp-for="bookquantity" class="form-control" placeholder="Enter quantity" />
            <span asp-validation-for="bookquantity" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label class="control-label fw-bold">Picture</label>
            <input type="file" class="form-control" name="file" />
        </div>

        <div class="form-group text-end">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </form>
</div>
@{
    Layout = "_Layout1";
}
<br />
<br />

@model IEnumerable<TechnoMobileProject.Models.items>
<style>
    body {
        background-color: #f4f6f9;
    }

    .table-responsive {
        border-radius: 8px;
        overflow: hidden;
    }

    
</style>
<hr />
<div class="container-fluid px-4 py-3">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="display-6 text-center">Items List Page</h1>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Info</th>
                            <th>Price</th>
                            <th>Discount</th>
                            <th>Publish Date</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="table-light">
                                <td>@Html.DisplayFor(modelItem => item.title)</td>
                                <td>@Html.DisplayFor(modelItem => item.info)</td>
                                <td>@Html.DisplayFor(modelItem => item.price)</td>
                                <td>@Html.DisplayFor(modelItem => item.discount)</td>
                                <td>@Html.DisplayFor(modelItem => item.pubdate)</td>
                                <td>
                                    @{
                                        string categoryName = "";
                                        if (item.category == 1)
                                            categoryName = "iPhone";
                                        else if (item.category == 2)
                                            categoryName = "Samsung";
                                        else if (item.category == 3)
                                            categoryName = "Google";
                                        else if (item.category == 4)
                                            categoryName = "OnePlus";
                                        else if (item.category == 5)
                                            categoryName = "Xiaomi";
                                        else if (item.category == 6)
                                            categoryName = "Huawei";
                                        else if (item.category == 7)
                                            categoryName = "Oppo";
                                        else if (item.category == 8)
                                            categoryName = "Vivo";
                                        else if (item.category == 9)
                                            categoryName = "Sony";
                                        else if (item.category == 10)
                                            categoryName = "LG";
                                        else if (item.category == 11)
                                            categoryName = "Nokia";
                                        else if (item.category == 12)
                                            categoryName = "Realme";
                                        else if (item.category == 13)
                                            categoryName = "Asus";
                                        else if (item.category == 14)
                                            categoryName = "Lenovo";
                                        else if (item.category == 15)
                                            categoryName = "Honor";
                                        else if (item.category == 16)
                                            categoryName = "BlackBerry";
                                        else
                                            categoryName = "Unknown";
                                    }
                                    @categoryName
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.bookquantity)</td>
                                <td>@Html.DisplayFor(modelItem => item.imgfile)</td>
                                <td>
                                    <div class="btn-group btn-group-sm m-2" role="group">
                                        <a asp-action="DetailsItem" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
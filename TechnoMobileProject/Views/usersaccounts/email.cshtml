
<br />
<h1 style="text-align: center; color: black">Email</h1>

<body style="background-image: url('/images/Reg5.png'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <form asp-action="email" style="max-width: 600px; margin: auto; background: rgb(255, 255, 255); padding: 20px; border-radius: 10px;">
        <div class="form-group">
            <label class="control-label">Customer Email Address</label>
            <input name="address" class="form-control" style="width: 100%; padding: 10px; margin-bottom: 10px;" />
        </div>

        <div class="form-group">
            <label for="body" class="control-label">Message</label>
            <textarea name="body" rows="4" cols="50" style="width: 100%; padding: 10px;"></textarea>
        </div>

        <br />
        <input type="submit" class="btn btn-success" value="Send" style="width: 100%; padding: 10px;" />
      <p>  @ViewData["message"]</p>
    </form>

   
</body>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechnoMobileProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechnoMobileProject.styles.css" asp-append-version="true" />
    <style>
        /* Full-width navbar */
        .navbar {
            background-color: #343a40; /* Dark background */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1030; /* Ensure navbar stays on top */
            padding: 10px 20px;
        }

            .navbar a {
                color: white;
                text-decoration: none;
                margin-right: 15px;
            }

                .navbar a:hover {
                    text-decoration: underline;
                }

        /* Adjust body content to avoid overlap with fixed navbar */
        body {
            margin-top: 60px; /* Add space for the fixed navbar */
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Ensure the body takes at least the full height of the screen */
        }

        .navbar-toggler-icon {
            background-color: white; /* Toggler icon color */
        }

        .navbar-nav {
            margin-left: auto;
        }

            .navbar-nav .nav-link {
                color: white;
            }

                .navbar-nav .nav-link:hover {
                    color: #007bff; /* Lighten the hover effect */
                }

        /* Footer Styling */
        footer {
            background-color: white;
            padding: 10px 0;
            margin-top: auto; /* Push footer to the bottom of the page */
        }

            footer .container-fluid {
                padding: 10px;
            }

            footer .text-center {
                text-align: left; /* Align text to the left */
            }

        /* Remove any extra space below the footer */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logos.png" alt="TechnoMobile Logo" style="height: 60px; width: auto;" />
                </a>                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="usersaccounts" asp-action="customerHome">Home</a>
                        </li>
                      
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="items" asp-action="list">List</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <a class="nav-link text-white btn btn-danger" asp-controller="usersaccounts" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            <div class="text-center">
                &copy; 2024 - TechnoMobileProject - <a href="@Url.Action("Privacy", "Home")" class="text-dark">Privacy</a>
                <p>Contact us at: Email: support@technomobile.com | Tel: +050000000</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

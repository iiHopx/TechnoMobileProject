<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechnoMobileProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechnoMobileProject.styles.css" asp-append-version="true" />
    <style>
        .navbar {
            background-color: #343a40;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1030;
            padding: 10px 20px;
        }

            .navbar a {
                color: white;
                text-decoration: none;
                margin-right: 15px;
            }

                .navbar a:hover {
                    text-decoration: underline;
                }

        body {
            margin-top: 60px;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar-toggler-icon {
            background-color: white;
        }

        .navbar-nav {
            margin-left: auto;
        }

            .navbar-nav .nav-link {
                color: white;
            }

                .navbar-nav .nav-link:hover {
                    color: #007bff;
                }

        footer {
            background-color: white;
            padding: 10px 0;
            margin-top: auto;
        }

            footer .container-fluid {
                padding: 10px;
            }

            footer .text-center {
                text-align: left;
            }

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logos.png" alt="TechnoMobile Logo" style="height: 60px; width: auto;" />
                </a>                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                            aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
              
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            <div class="text-center">
                &copy; 2024 - TechnoMobileProject - <a href="@Url.Action("Privacy", "Home")" class="text-dark">Privacy</a>
                <p>Contact us at: Email: support@technomobile.com | Tel: +050000000</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechnoMobileProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechnoMobileProject.styles.css" asp-append-version="true" />
    <style>
        /* Full-width navbar */
        .navbar {
            background-color: #343a40; /* Dark background */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1030; /* Ensure navbar stays on top */
            padding: 10px 20px;
        }

            .navbar a {
                color: white;
                text-decoration: none;
                margin-right: 15px;
            }

                .navbar a:hover {
                    text-decoration: underline;
                }

        /* Adjust body content to avoid overlap with fixed navbar */
        body {
            margin-top: 60px; /* Add space for the fixed navbar */
        }

        .navbar-toggler-icon {
            background-color: white; /* Toggler icon color */
        }

        .navbar-nav {
            margin-left: auto;
        }

            .navbar-nav .nav-link {
                color: white;
            }

                .navbar-nav .nav-link:hover {
                    color: #007bff; /* Lighten the hover effect */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">

                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">TechnoMobileProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid" style="background-color: white; padding: 10px;">
            <div class="text-center">
                &copy; 2024 - TechnoMobileProject - <a href="@Url.Action("Privacy", "Home")" class="text-dark">Privacy</a>
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model IEnumerable<TechnoMobileProject.Models.items>
@{
    Layout = "_Layout1";
}
<br />
<br />
<br />
<br />
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        @item.title
                    </div>
                    <div class="card-body">
                        <img src="~/images/@item.imgfile" height="150" />
                    </div>
                    <div class="card-footer">
                        <a asp-action="BookBuyDetail" asp-route-id="@item.Id">Buy</a> |
                    </div>
                </div>
            </div>
        }
    </div>
</div>
